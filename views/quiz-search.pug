body

    .bg-img

    section#found-quizzes
        for item in quizzes
            - var index = quizzes.indexOf(item)
            form(action="/quiz-play", method="GET").quiz-card(id=index)
                h3.quiz-title=item.title
                h4.user-submitted='Submitted by ' + item.username
                if item.questions.length > 1
                    h4.num-questions=item.questions.length + ' questions'
                else
                    h4.num-questions= '1 question'
                button.completed-btn.play-quiz(type='button', id=`play-${index}`) Play Quiz
                input(type='hidden', id=`questions-${index}`, name="quizID", value=item._id)
